<div class="sign_box">
    <form action="users/create" method="post" onsubmit="submitFunction()">
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">
        <input type=" text" placeholder="First_name" name="users[fname]" id="sign_inp11" required>
        <input type="email" placeholder="Email" name="users[email]" id="sign_inp12" required>
        <input type="password" placeholder="password" name="users[password]" id="sign_inp3" required>
        <input type="password" placeholder="confirm_password" name="users[confirm_password]" id="sign_inp4" required>
        <button type="submit" class="f_sub1">Submit</button>
        <% if flash[:error]%>
            <p class="text-danger">
                <%= flash[:error] %>
            </p>
            <% end %>
    </form>
</div>
<script>
submitFunction(event) {
    event.preventDefault();
             let createpassword = document.getElementById("sign_inp3").value.trim();
            let confirmpassword = document.getElementById("sign_inp4").value.trim();
                if (createpassword != confirmpassword) {
